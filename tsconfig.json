{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "build",
      "baseUrl": "./src",
      "paths": {
          "*": [
              "node_modules/*"
          ],
          "@root/*": ["./*"],
      },
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
  },
  "include": [
      "src/**/*"
  ]
}